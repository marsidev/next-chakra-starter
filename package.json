{
  "name": "next-chakra-starter",
  "description": "A boilerplate for React apps using Next.js, Chakra UI, and TypeScript.",
  "version": "1.0.0",
  "repository": "git@github.com:marsidev/next-chakra-starter.git",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "(if exist .next rd /s /q .next 2>nul) && next dev -p 5500",
    "build": "next build",
    "start": "next start -p $PORT",
    "lint": "eslint . --ext .js --ext .jsx --ext .ts --ext .tsx",
    "lint:fix": "eslint . --ext .js --ext .jsx --ext .ts --ext .tsx --fix",
    "type-check": "tsc --noEmit --incremental false"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.0.2",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "framer-motion": "^6.3.3",
    "next": "^12.1.6",
    "next-seo": "^5.4.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-icons": "^4.3.1",
    "zustand": "^3.7.2"
  },
  "devDependencies": {
    "@types/node": "^17.0.34",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.15.0",
    "eslint-config-xo": "^0.41.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "typescript": "^4.6.4"
  },
  "packageManager": "pnpm@7.0.1",
  "engines": {
    "node": "16.x"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core"
      ],
      "allowedVersions": {
        "react": "18",
        "react-dom": "18"
      }
    }
  }
}
